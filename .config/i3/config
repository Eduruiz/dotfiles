# change volume or toggle mute
bindsym XF86AudioRaiseVolume exec amixer -M set Master 5%+ && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -M set Master 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle && pkill -RTMIN+1 i3blocks

# configure macbook keys to control brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# configure macbook keys to control keyboard backlight
bindsym XF86KbdBrightnessUp   exec --no-startup-id kbdlight up 5                           && pkill -RTMIN+2 i3blocks
bindsym XF86KbdBrightnessDown exec --no-startup-id kbdlight down 5                         && pkill -RTMIN+2 i3blocks

# Media player controls
bindsym XF86AudioPlay   exec playerctl play-pause
bindsym XF86AudioNext   exec playerctl next
bindsym XF86AudioPrev   exec playerctl previous

# start ssh agent
exec eval `ssh-agent -s`
exec ssh-add 

# start dropbox
exec dropbox

# swap caps and control keys
exec_always /usr/bin/setxkbmap -option "ctrl:swapcaps"
# add compose key to right alt key, so I can make the strange portuguese letters with hat :)
exec_always /usr/bin/setxkbmap -option "compose:ralt"



# Make the currently focused window a scratchpad
